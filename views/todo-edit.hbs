<h1>Edit Todo</h1>
<form action="/todos" method="post">
    <label for="title">Title</label>
    <input type="hidden" id="todoId" name="todoId" value={{data._id}} />
    <input id='title' name='title' type='text' required="required" value="{{data.title}}">
    <label for="importance">Importance</label>
    <input id='importance' name='importance' type='number' min="1" max="5" value="{{data.importance}}">
    <label for="date">Due date</label>
    <input id='date' name='date' type='date' value="{{data.dueDate}}">
    <label for="description">Description</label>
    <input id='description' name='description' type='text' value="{{data.description}}">
    <label for="done">Done?</label>
    {{#if (is_done data.state)}}
        <input id="state" name="state" type="checkbox" checked>
    {{else}}
        <input id="state" name="state" type="checkbox">
    {{/if}}
    <input type='submit' value='Update' name="updateButton">
    <input type='submit' value='Update & Overview' name="updateAndOverviewButton">
    <input type='submit' value='Overview' name="overviewButton">
</form>
